{
  "manifest_version": 2,

  "name": "Kodi Remote",
  "description": "A remote control for Kodi",
  "version": "0.3.0",

  "browser_action": {
    "default_icon": "app/assets/images/app.png",
    "default_popup": "app/views/app.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "http://*/"
  ]
}